<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="upper-title-box">
            <h3>
                Hello HR <%= @current_hr_user&.email %>
            </h3>
            <h4>
                My Referral Code: <%= @current_hr_user&.referral_code %>
            </h4>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- applicants Widget -->
                <div class="applicants-widget ls-widget">
                    <div class="widget-content">
                        <div class="row">
                            <!-- Job Block -->
                            <% @freelancer_jobs.each do |job| %>
                            <div class="job-block col-lg-6 col-md-12 col-sm-12">
                                <div class="inner-box">
                                    <div class="content">
                                        <span class="company-logo">
                                        <%= image_tag(job.company_logo, :alt => job.company_name) %>
                                        </span>
                                        <h4><a href="/hr_freelancers/<%= job.id %>?<%= job.slug || job.title %>">
                                            <%=job.title %>
                                            </a>
                                        </h4>
                                        <ul class="job-info">
                                            <li><span class="icon flaticon-briefcase"></span>
                                                <%=job.category || 'Software Engineering' %>
                                            </li>
                                            <li><span class="icon flaticon-map-locator"></span>
                                                <%= job.province %>
                                            </li>
                                            <li><span class="icon flaticon-clock-3"></span>
                                                <%= job.created_at%>
                                            </li>
                                            <li><span class="icon flaticon-money"></span>
                                                <%= job.salary_text%>
                                            </li>
                                            <li><span class="icon flaticon-money"></span>
                                                <strong>
                                                Hoa Há»“ng:
                                                </strong> <%= Job.consultant_commission(job.commission) %>
                                            </li>
                                        </ul>
                                        <ul class="job-other-info">
                                            <li class="time">Full Time</li>
                                            <li class="privacy">Hot Job</li>
                                            <li class="required">Urgent</li>
                                        </ul>
                                        <button class="bookmark-btn"><span class="flaticon-bookmark"></span></button>
                                    </div>
                                </div>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
