<!-- Info Section -->
<div class="login-section">
    <div class="image-layer" style="background-image: url(https://devfinding-production.s3.ap-southeast-1.amazonaws.com/background.png);"></div>
    <div class="outer-box">
        <!-- Login Form -->
        <div class="login-form default-form">
            <div class="form-inner">
                <h3>
                    Update New Password Form
                </h3>
                <% if flash[:update_password_success] %>
                    <div class="alert alert-success">
                      <a class="close" data-dismiss="alert"></a>
                      <%= flash[:update_password_success] %>
                    </div>
                <% end %>

                <% if flash[:password_reset_token_invalid] %>
                    <div class="alert alert-danger">
                      <a class="close" data-dismiss="alert"></a>
                      <%= flash[:password_reset_token_invalid] %> <a href="/hr_freelancers/sessions/forgot">Reset Again</a>
                    </div>
                <% end %>
                <!--Login Form-->
                <%= form_for(:hr_freelancer, :url => { :controller => 'hr_freelancers/sessions', :action => 'update_password'}) do |f| %>
                    <div class="form-group">
                        <label>
                          New Password
                        </label>
                        <%= f.password_field :password, :class=>"form-control", :required => true, :placeholder => 'Enter your new password' %> 
                    </div>
                    <div class="form-group">
                        <button class="theme-btn btn-style-one" type="submit" name="log-in">
                          Update New Password
                        </button>
                    </div>
                <% end %>
                <div class="bottom-box">
                    <div class="text">have an account? <a href="/hr_freelancers/sessions/signin">Signin</a></div>
                </div>
            </div>
        </div>
        <!--End Login Form -->
    </div>
</div>
<!-- End Info Section -->