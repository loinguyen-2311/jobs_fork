<!-- Banner Section-->
<section class="banner-section">
    <div class="auto-container">
        <div class="row">
            <div class="content-column col-lg-7 col-md-12 col-sm-12">
                <div class="inner-column wow fadeInUp" data-wow-delay="1000ms">
                    <div class="title-box">
                        <h3>There Are <span class="colored">
                            <%= @job_count %>
                            </span> Postings Here<br> For you!
                        </h3>
                        <div class="text">Find Jobs, Employment & Career Opportunities</div>
                    </div>
                    <!-- Job Search Form -->
                    <% cache "candidate_search_form" do %>
                        <div class="job-search-form">
                            <form method="get" action="/candidate_jobs">
                                <div class="row">
                                    <div class="form-group col-lg-5 col-md-12 col-sm-12">
                                        <span class="icon flaticon-search-1"></span>
                                        <input type="text" name="title" placeholder="Job title, keywords, or company">
                                    </div>
                                    <!-- Form Group -->
                                    <div class="form-group col-lg-4 col-md-12 col-sm-12 location">
                                        <span class="icon flaticon-map-locator"></span>
                                        <input type="text" name="location" placeholder="Location">
                                    </div>
                                    <!-- Form Group -->
                                    <div class="form-group col-lg-3 col-md-12 col-sm-12 btn-box">
                                        <button type="submit" class="theme-btn btn-style-one"><span class="btn-title">Find Jobs</span></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    <% end %>
                    <!-- Job Search Form -->
                    <!-- Popular Search -->
                    <div class="popular-searches">
                        <span class="title">Popular Searches : </span>
                        <% @tag_list.each do |tag| %>
                            <a href="/candidate_jobs?title=<%= tag %>"><%= tag %></a>,
                        <% end %>
                    </div>
                    <!-- End Popular Search -->
                </div>
            </div>
            <% cache "candidate_image_box" do %>
                <div class="image-column col-lg-5 col-md-12">
                <div class="image-box">
                    <figure class="main-image wow fadeIn" data-wow-delay="500ms">
                      <%= image_tag "banner-img-1.png", alt: "banner image" %>
                    </figure>
                    <!-- Info BLock One -->
                    <div class="info_block anm wow fadeIn" data-wow-delay="1000ms" data-speed-x="2" data-speed-y="2">
                        <span class="icon flaticon-email-3"></span>
                        <p>Work From <br>Anywheres</p>
                    </div>
                    <!-- Info BLock Two -->
                    <div class="info_block_two anm wow fadeIn" data-wow-delay="2000ms" data-speed-x="1" data-speed-y="1">
                        <p>10k+ Candidates</p>
                        <div class="image">
                          <%= image_tag "multi-peoples.png" %>
                        </div>
                    </div>
                    <!-- Info BLock Three -->
                    <div class="info_block_three anm wow fadeIn" data-wow-delay="1500ms" data-speed-x="4" data-speed-y="4">
                        <span class="icon flaticon-briefcase"></span>
                        <p>Creative Agency</p>
                        <span class="sub-text">Startup</span>
                        <span class="right_icon fa fa-check"></span>
                    </div>
                    <!-- Info BLock Four -->
                    <div class="info_block_four anm wow fadeIn" data-wow-delay="2500ms" data-speed-x="3" data-speed-y="3">
                        <span class="icon flaticon-file"></span>
                        <div class="inner">
                            <p>Upload Your CV</p>
                            <span class="sub-text">It only takes a few seconds</span>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</section>
<!-- End Banner Section-->
