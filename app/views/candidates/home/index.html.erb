<!-- Job Section -->
<section class="job-section">
    <div class="auto-container">
        <div class="sec-title text-center">
            <h2>Featured Jobs</h2>
            <div class="text">Know your worth and find the job that qualify your life</div>
        </div>
        <div class="row wow fadeInUp">
            <% @jobs.each do |job| %>
            <!-- Job Block -->
                <div class="job-block col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-box">
                        <div class="content">
                            <span class="company-logo"><img src="<%= job&.company_logo %>" alt=""></span>
                            <h4><a href="/single_job/<%= job.id %>">
                                <%= job.title %>
                                </a>
                            </h4>
                            <ul class="job-info">
                                <li><span class="icon flaticon-briefcase"></span>
                                    <%= job.category %>
                                </li>
                                <li><span class="icon flaticon-map-locator"></span><%= job.province %></li>
                                <li><span class="icon flaticon-clock-3"></span><%= job.created_at.strftime('%a %b %d') %></li>
                                <li><span class="icon flaticon-money"></span><%= job.salary_text %></li>
                            </ul>
                            <ul class="job-other-info">
                                <li class="time">Full Time</li>
                            </ul>
                            <button class="bookmark-btn"><span class="flaticon-bookmark"></span></button>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="btn-box">
            <a href="/candidate_jobs" class="theme-btn btn-style-one bg-blue"><span class="btn-title">Load More Listing</span></a>
        </div>
    </div>
</section>
<!-- End Job Section -->
