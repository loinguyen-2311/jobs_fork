<div class="wrapper-page">
  <div class="text-center">
    <a href="/admin" class="logo">
      <span>DevFinding</span>
    </a>
    <h5 class="text-muted m-t-0 font-600">
      DevFinding Manage System
    </h5>
  </div>
  <% if flash[:admin_login_fail] %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= flash[:admin_login_fail] %>
    </div>
  <% end %>
  <div class="m-t-40 card-box background-image-login">
    <div class="text-center">
      <h4 class="text-uppercase font-bold font-bold-login m-b-0">
        Đăng nhập
      </h4>
    </div>
    <div class="panel-body">
      <%= form_for(:adminlogin, :url => {:controller => 'sessions', :action => 'login', :class => 'form-horizontal m-t-20'}) do |f| %>
        <div class="form-group ">
          <div class="col-xs-12">
            <%= f.text_field :email_admin, :class=>"form-control", :required => true, :placeholder => "Enter your email" %>
          </div>
        </div>
        <br>
        <br>
        <br>
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.password_field :password_admin, :class=>"form-control", :required => true,:placeholder => "Enter your password" %> 
          </div>
        </div>
        <br>
        <div class="form-group text-center m-t-30">
          <div class="col-xs-12">
            <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">
              Đăng nhập
            </button>
          </div>
        </div>
        <br>
        <div class="form-group m-t-30 m-b-0">
          <div class="col-sm-12">
            <a href="/admin-login/forget-password" class="text-muted">
              <i class="fa fa-lock m-r-5"></i>Quên mật khẩu?
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>